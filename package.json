{
  "name": "style-tracker",
  "displayName": "Style Tracker",
  "version": "1.0.0",
  "description": "Real-time CSS tracking with split view. Instantly locate and highlight CSS styles for any HTML element, class, or ID in your code.",
  "publisher": "Bashademy",
  "main": "out/extension.js",
  "icon": "images/icon.png",
  "author": "Dilhara MMS",
  "license": "ISC",
  "homepage": "https://bashademy.com/style-tracker",
  "repository": {
    "type": "git",
    "url": "https://github.com/chapayev0/style-tracker.git"
  },
  "bugs": {
    "url": "https://github.com/chapayev0/style-tracker/issues"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "css",
    "html",
    "style",
    "tracker",
    "highlight",
    "jsx",
    "react"
  ],
  "engines": {
    "vscode": "^1.80.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "htmlCssTracker.trackElement",
        "title": "Track CSS for HTML element"
      },
      {
        "command": "htmlCssTracker.close",
        "title": "Close CSS Tracker"
      },
      {
        "command": "htmlCssTracker.startTracking",
        "title": "Enable CSS Tracking",
        "icon": "$(eye-closed)"
      },
      {
        "command": "htmlCssTracker.stopTracking",
        "title": "Disable CSS Tracking",
        "icon": "$(eye)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "htmlCssTracker.stopTracking",
          "when": "editorTextFocus && htmlCssTracker.isTrackingEnabled",
          "group": "navigation"
        },
        {
          "command": "htmlCssTracker.startTracking",
          "when": "editorTextFocus && !htmlCssTracker.isTrackingEnabled",
          "group": "navigation"
        }
      ]
    }
  },
  "galleryBanner": {
    "color": "#5B2E91",
    "theme": "dark"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "tsc -p .",
    "watch": "tsc -p . --watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "@vscode/test-electron": "^2.3.3",
    "eslint": "^8.44.0",
    "typescript": "^5.1.6"
  },
  "type": "commonjs"
}
